{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-wsl",
            "type": "shell",
            "command": "bash -c \"make -j8 all\"",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean-wsl",
            "type": "shell",
            "command": "bash -c \"make clean\"",
            "problemMatcher": []
        },
        {
            "label": "run-wsl",
            "type": "shell",
            "command": "bash -c \"./main.out\"",
            "group":{
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}