{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-wsl",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "make -j16 all"],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }, {
            "label": "build-test-wsl",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "make -j16 link-test"],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }, {
            "label": "clean-wsl",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "make clean"],
            "problemMatcher": []
        }, {
            "label": "run-wsl",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "./main.out"],
            "group":{
                "kind": "test",
                "isDefault": true
            }
        }, {
            "label": "run-test-wsl",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "./test.out"],
            "group":{
                "kind": "test",
                "isDefault": true
            }
        }        
    ]
}